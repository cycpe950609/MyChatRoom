{
  "rules": {
    "users_name_with_id":{
      "$uid":{
        ".read" : "auth != null",
        ".write": "$uid === auth.uid"
      },
      ".read" : "auth != null"
    },
    "chatroom":{
      "$gp_id":{
        "users":{
          ".read" : "auth != null",
          ".write": "auth != null"
        },
        "chatroom":{
          ".read" : "root.child('chatroom').child($gp_id).child('users').child(auth.uid).exists()",
          ".write": "root.child('chatroom').child($gp_id).child('users').child(auth.uid).exists()"
        }
      },
      ".read" : "auth != null"
    },

    "user_data":{
      "$uid":{
        "setting":{
            ".read" : "auth != null",
            ".write": "$uid === auth.uid"
        },
  
        "friends":{
          ".read" : "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "inviting_friend":{
          ".read" : "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "invited_friend":{
          ".read" : "$uid === auth.uid",
          ".write": "auth != null"
        },
  
        
  
        "chatroom_group":{
          ".read" : "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "inviting_group":{
          ".read" : "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "invited_group":{
          ".read" : "$uid === auth.uid",
          ".write": false
        }
      }
    }
    
  }
}